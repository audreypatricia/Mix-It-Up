
<h2 class="artist_name"><%= @artist.name %></h2>

<div class="row discover_artist">
  <div class="col-md-1">

  </div>
  <div class="col-md-3">
     <%= image_tag @artist.images.first["url"], :class => "artist_fig"%>
  </div>
  <div class="col-md-3">
    <p class="headers">Genres:</p>
    <p><%= @artist.genres.join(', ') %></p>
    <p class="headers">Albums count:</p>
    <p><%= @artist.albums.count %></p>
  </div>
  <div class="col-md-2">

  </div>

</div>


<% @top_tracks.each_with_index do |track, index| %>
  <div class="item top_song_artist">
    <%= link_to (image_tag track.album.images.first["url"], :class => 'thumb playlist-tracks', :id => "#{index}"), discover_path(id: @artist.id) %>
    <span class="cpation"><%= track.name %></span>
  </div>
<% end %>
