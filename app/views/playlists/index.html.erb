
<h3 class="playlist_header">Your playlists</h3>

<div class="row playlist-container">
  <div class="col-md-6">

      <% @playlists.each do |playlist| %>
        <p class="playlist_title"><%= link_to (playlist.name), tracks_path(playlist.id) %></p>
      <% end %>

  </div>
  <div class="col-md-6 playlist_images">
    <% @playlists.each do |playlist| %>
        <%= link_to (image_tag playlist.images.first["url"], :class => 'playlist_img'), tracks_path(playlist.id) if playlist.present? && playlist.images != []%>

    <% end %>
  </div>

</div>
