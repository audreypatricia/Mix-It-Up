<!DOCTYPE html>
<html>
  <head>
    <title>SpotifyPlaylistMaker</title>
    <%= csrf_meta_tags %>
     <%= Gon::Base.render_data %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

    <% if session[:user].present? %>
      <nav class="nav">
        <%= image_tag "logo.svg", :class => "nav-logo" %>
        <%= image_tag "word-logo.png", :class => "nav-logo" %>
        <%= link_to "Home", root_path, :class => "nav-link active" %>
        <%= link_to "My playlists", playlists_path, :class => "nav-link start"%>
        <%= link_to "Saved tracks", save_path, :class => 'nav-link' %>
        <%= link_to "Log out", login_path, :method => 'delete', :class => 'logout nav-link'%>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
